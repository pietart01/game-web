<!-- user-profile.ejs -->
<div class="user-profile-container w-full max-w-[360px] bg-white bg-opacity-90 rounded-xl p-6">
    <div class="flex items-center mb-4">
        <img src="<%= avatar_url %>" alt="User Avatar" class="w-16 h-16 rounded-full mr-4">
        <div>
            <h2 class="text-xl font-bold"><%= username %></h2>
            <p class="text-sm text-gray-600">Welcome to OKGame</p>
        </div>
    </div>

    <div class="grid grid-cols-2 gap-2 mb-4">
        <div class="flex justify-between items-center bg-gray-100 p-2 rounded">
            <span class="font-semibold">캐시:</span>
            <span><%= cash.toLocaleString() %></span>
        </div>
        <div class="flex justify-between items-center bg-gray-100 p-2 rounded">
            <span class="font-semibold">실버:</span>
            <span><%= silver.toLocaleString() %></span>
        </div>
        <div class="flex justify-between items-center bg-gray-100 p-2 rounded col-span-2">
            <span class="font-semibold">골드:</span>
            <span><%= gold.toLocaleString() %></span>
        </div>
    </div>

    <div class="grid grid-cols-2 gap-2">
        <% ['내정보', '금고', '머니 이동', '보관함/메시지', '로그아웃'].forEach(action => { %>
            <button class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded">
                <%= action %>
            </button>
        <% }); %>
    </div>
</div>