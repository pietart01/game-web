    <style>
        :root {
            --primary-color: #6a11cb;
            --primary-gradient: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
            --secondary-color: #f3e7ff;
            --secondary-gradient: linear-gradient(to right, #e0c3fc 0%, #8ec5fc 100%);
            --text-color: #2c2c2c;
            --placeholder-color: #a78bda;
            --border-color: #d0bfff;
            --background-color: #faf8ff;
            --form-background: rgba(255, 255, 255, 0.9);

            --border-radius-lg: 16px;
            --border-radius-md: 12px;
            --border-radius-sm: 8px;

            --spacing-xs: 4px;
            --spacing-sm: 8px;
            --spacing-md: 16px;
            --spacing-lg: 24px;

            --font-size-sm: 14px;
            --font-size-md: 16px;
            --font-size-lg: 18px;

            --input-height: 48px;
            --button-height: 48px;

            --spacing-xl: 32px;
            --font-size-xl: 24px;

            /* Additional variables for game layout */
            --game-title-color: #1C160C;
            --game-description-color: #A18249;
        }
        body {
            font-family: 'Spoqa Han Sans', 'Spoqa Han Sans JP', 'Sans-serif';
        }

        @media (max-width: 768px) {
            .banner-content {
                flex-direction: column;
            }
            .login-form-container {
                width: 100%;
                padding: 1rem;
            }
        }

        .carousel-container {
            position: relative;
            width: 100%;
            height: 400px;
        }
        .swiper {
            width: 100%;
            height: 100%;
        }
        .swiper-slide {
            background-position: center;
            background-size: cover;
            filter: brightness(200%);
        }
        .banner-content {
            position: absolute;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 1.5rem;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 10;
        }

        .login-form-container {
            width: 100%;
            max-width: 360px;
            background-color: var(--form-background);
            border-radius: var(--border-radius-lg);
            padding: var(--spacing-lg);
            box-shadow: 0 10px 25px rgba(106, 17, 203, 0.1);
        }

        .login-form {
            display: flex;
            flex-direction: column;
            gap: var(--spacing-md);
        }

        .form-input {
            width: 100%;
            height: var(--input-height);
            padding: 0 var(--spacing-md);
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius-md);
            font-size: var(--font-size-md);
            color: var(--text-color);
            background-color: var(--background-color);
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-input::placeholder {
            color: var(--placeholder-color);
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(106, 17, 203, 0.1);
        }

        .btn {
            height: var(--button-height);
            border: none;
            border-radius: var(--border-radius-sm);
            font-size: var(--font-size-md);
            font-weight: bold;
            cursor: pointer;
            transition: opacity 0.3s ease, transform 0.1s ease;
            background-size: 200% auto;
        }

        .btn:hover {
            background-position: right center;
        }

        .btn:active {
            transform: translateY(1px);
        }

        .btn-primary {
            background-image: var(--primary-gradient);
            color: white;
        }

        .btn-secondary {
            background-image: var(--secondary-gradient);
            color: var(--primary-color);
        }

        .form-footer {
            margin-top: var(--spacing-md);
            text-align: center;
        }

        .form-footer a {
            color: var(--primary-color);
            text-decoration: none;
            font-size: var(--font-size-sm);
            transition: color 0.3s ease;
        }

        .form-footer a:hover {
            color: #2575fc;
        }



