          </div>
        </div>
      </div>

      <div class="register-content">
        <%- include('partials/register/step-agreement') %>
        <%- include('partials/register/step-authentication') %>
        <%- include('partials/register/step-form') %>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
  <script type="module" src="/js/register.js"></script>
