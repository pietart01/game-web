<!DOCTYPE html>
<html lang="ko">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/css/support.css">
  <link rel="stylesheet" href="/css/components/tabs.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="content">
    <div class="tab-container">
      <div class="tab-navigation">
        <button class="tab-button" data-tab="notice">공지사항</button>
        <button class="tab-button" data-tab="inquiry">게임문의</button>
      </div>

      <div class="tab-panel" data-panel="notice">
        <div class="notice-list">
          <%- include('partials/support/notice-item', {
            id: 'notice-1',
            type: '공지사항',
            title: '홀덤 입장금액 및 게임룸 안내',
            date: '2024.07.03',
            content: '안녕하세요. 홀덤 게임 입장금액 및 게임룸 안내드립니다.'
          }) %>
        </div>
      </div>

      <div class="tab-panel" data-panel="inquiry">
        <div class="inquiry-list">
          <p class="empty-message">문의 내역이 없습니다.</p>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
  <script type="module" src="/js/modal.js"></script>
  <script type="module" src="/js/support.js"></script>
  <script type="module">
    import { initProfileModal } from '/js/profileModal.js';
    import { initCashChargeModal } from '/js/cash-charge-modal.js';

    document.addEventListener('DOMContentLoaded', () => {
      initProfileModal();
      initCashChargeModal();
    });
  </script>

</body>
</html>
