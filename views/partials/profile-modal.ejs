<%# Profile Modal %>
<div id="profileModal" class="modal">
  <div class="modal-content profile-content">
    <div class="modal-header">
      <h2 class="font-kr-medium">내 정보</h2>
      <button class="close" aria-label="Close modal">&times;</button>
    </div>
    
    <div class="profile-main">
      <div class="profile-avatar-container">
        <img id="profileAvatar" class="profile-avatar" alt="User avatar">
        <button class="refresh-button" aria-label="Refresh avatar">↻</button>
      </div>
    </div>
    
    <div class="profile-info">
      <div class="detail-row">
        <span class="label">골드머니</span>
        <span class="value">0 골드</span>
      </div>
      <div class="detail-row">
        <span class="label">실버머니</span>
        <span class="value">15,560 백실버</span>
      </div>
      <div class="detail-row">
        <span class="label">보유 캐시</span>
        <span class="value">0 캐시</span>
      </div>
      <div class="detail-row">
        <span class="label">멤버십</span>
        <span class="value">일반</span>
      </div>
      
      <button class="charge-button font-kr-medium">마이페이지</button>
    </div>
  </div>
</div>