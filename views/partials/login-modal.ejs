<%# Login Modal %>
<div id="loginModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="font-kr-medium">로그인</h2>
      <button class="close" aria-label="Close modal">&times;</button>
    </div>

    <form id="loginForm" class="login-form font-kr">
      <div class="form-group">
        <input
                type="text"
                id="userId"
                placeholder="아이디"
                required
                autocomplete="username">
      </div>

      <div class="form-group">
        <input
                type="password"
                id="userPassword"
                placeholder="비밀번호"
                required
                autocomplete="current-password">
      </div>

      <!-- New centralized error message area -->
      <div class="login-error-container">
        <p class="login-error-message font-kr"></p>
      </div>

      <button type="submit" class="login-submit font-kr-medium">로그인</button>
    </form>

    <div class="login-links">
      <a href="/register">계정찾기</a>
      <span>|</span>
      <a href="/reset-password">비밀번호 찾기</a>
      <span>|</span>
      <a href="/register">회원가입</a>
    </div>
  </div>
</div>
