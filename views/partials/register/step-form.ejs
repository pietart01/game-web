<div class="register-step" id="step-form" style="display: none;">
  <form class="signup-form">
    <div class="form-group">
      <label for="userId">아이디</label>
      <div class="input-group">
        <input type="text" id="userId" name="userId" required>
        <button type="button" class="check-button">중복확인</button>
      </div>
      <div class="error-message"></div>
    </div>

    <div class="form-group">
      <label for="nickname">닉네임</label>
      <div class="input-group">
        <input type="text" id="nickname" name="nickname" required>
        <button type="button" class="check-button">중복확인</button>
      </div>
      <div class="error-message"></div>
    </div>

    <div class="form-group">
      <label for="email">이메일</label>
      <input type="email" id="email" name="email" required>
      <div class="error-message"></div>
    </div>

    <div class="form-actions">
      <button type="button" class="prev-button font-kr-medium">이전</button>
      <button type="submit" class="submit-button font-kr-medium">가입하기</button>
    </div>
  </form>
</div>